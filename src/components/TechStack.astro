---
import { stack } from '../data/stack';
---

<section class="flex flex-col gap-10 mt-10 lg:mt-20 mb-5">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-x-12 lg:gap-y-16"> 
        {stack.map((group) => (
            <div class="group">
                <h4 class="font-mono text-[10px] md:text-xs text-accent-dim mb-4 md:mb-6 uppercase tracking-widest border-b border-accent-dim/20 pb-2 inline-block">
                    {group.category}
                </h4>
                
                <ul class="flex flex-col gap-2 md:gap-3">
                    {group.items.map((item) => (
                        <li class="font-display text-xl md:text-2xl lg:text-3xl text-accent-light/60 hover:text-accent-light transition-colors duration-300 cursor-default uppercase">
                            {item}
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>

</section>